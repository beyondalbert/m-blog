<%- include ../layout/header %>
<% posts.forEach(function (post, index) { %>
  <p><h2><a href="/posts/show/<%= post._id %>"><%= post.title %></a></h2></p>
  <p class="info">
    作者：<a href="/users/<%= post.author %>"><%= post.author %></a> | 
    日期：<%= post.time.minute %>
  </p>
  <p><%- post.content %></p>
<% }) %>
<%- include ../layout/footer %>
