<%- include ../layout/header %>
<div class="row">
  <div class="col-lg-8">
      <h1><%= post.title %></h1>
      <p>
        <% if (user && (user.name == post.author)) { %>
          <span><a class="edit" href="/posts/edit/<%= post._id %>">编辑</a></span>
          <span><a class="edit" href="/posts/destroy/<%= post._id %>">删除</a></span>
        <% } %>
      </p>
      <hr>
      <p><span class="glyphicon glyphicon-time"></span><%= post.time.minute %></p>
      <hr>
      <img class="img-responsive" src="http://placehold.it/900x300" alt="">
